<div class="tab-pane" id="dialogues">
  <table class="table table-bordered">
    <thead>
      <th><%= t "conemo.views.active.participants.report.release_day" %></th>
      <th><%= t "conemo.views.shared.dialogue" %></th>
    </thead>
    <tbody>
      <% dialogues.each_with_index do |dialogue, index| %>
        <tr>
          <td class="release-day">(<%= dialogue.day_in_treatment %>)<%= participant.start_date ? " " + l(participant.start_date + dialogue.day_in_treatment.to_i.days - 1.days, format: :long) : "" %></td>
          <td class="dialogue-message"><%= dialogue.message %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
