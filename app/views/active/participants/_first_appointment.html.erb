<li class="timeline-inverted">
  <div class="timeline-badge" style="background-color:orange"><i class="fa fa-user-md fa-lg"></i></div>
  <div class="timeline-panel">
    <div class="timeline-heading">
      <h4 class="timeline-title"><%= link_to '', edit_participant_first_appointment_path(first_appointment.participant), class: "fa fa-edit fa-lg" %> <%= t "conemo.views.active.participants.show.first_appointment_heading" %></h4>
      <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i> <%= t "helpers.label.first_appointment.appointment_at" %>: <%= first_appointment.appointment_at.to_s(:long) %></small></p>
    </div>
    <div class="timeline-body">
      <p><strong><%= t "helpers.label.first_appointment.appointment_location" %>: </strong> <%= first_appointment.appointment_location %>
      <p><strong><%= t "helpers.label.first_appointment.session_length" %>: </strong><%= first_appointment.session_length %>      
    </div>
  </div>
