<div class="row">
  <div class="col-md-12">
    <h1><%=t "conemo.views.active.participants.index.heading" %></h1>
    <br>
    <table class="table table-striped table-bordered">
      <tr>
        <th><%=t "conemo.views.shared.nurse" %></th>
        <th><%=t "conemo.views.active.participants.index.name" %></th>
        <th><%=t "conemo.views.active.participants.index.study_identifier" %></th>
        <th><%=t "conemo.views.active.participants.index.enrollment_date" %></th>
        <th><%=t "conemo.views.active.participants.index.first_contact" %></th>
        <th>
          <%=t "conemo.views.active.participants.index.first_appointment" %> / 
          <%=t "conemo.views.active.participants.index.location" %>
        </th>
        <th><%=t "conemo.views.active.participants.index.second_contact" %></th>
        <th><%=t "conemo.views.active.participants.index.status" %></th>
      </tr>
      <% @participants.each do |participant| %>
        <tr>
          <td><%= participant.nurse.last_name %></td>
          <td><%= link_to "#{participant.last_name}, #{participant.first_name}", active_participant_path(participant) %></td>
          <td><%= participant.study_identifier %></td>
          <td><%= participant.enrollment_date.to_s(:long) %></td>
          <td><%= first_contact(participant) %></td>
          <td><%= first_appointment(participant) %></td>
          <td><%= second_contact(participant) %></td>
          <td><i class="fa fa-eye"></i></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>