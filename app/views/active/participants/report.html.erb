<div class="row">
  <div class="col-md-6">
    <h1>
      <%= link_to "", active_participants_path, class: "fa fa-chevron-left" %>
      <%= "#{@participant.first_name} #{@participant.last_name}" %>
    </h1>
  </div>
  <div class="col-md-6">
    <h1 class="pull-right">
      <%= render_large_status(@participant) %>
      <small> <%=t 'conemo.views.active.participants.report.overall_status' %></small>
    </h1>
  </div>
</div>
<br>
<div class="row well">
  <div class="col-md-2">
    <div>
      <div class="access-count">
        <h5 class="text-center"><%=t 'conemo.views.active.participants.report.access_count' %></h5>
        <span><%= @participant.seven_day_access.count %></span>
      </div>
    </div>
    <table class="table table-bordered">
      <tr style="background-color:gray;">
        <th class="text-center" style="color:white;">Log-ins</th>
      </tr>
      <% @participant.app_logins.each do |login| %>
        <tr>
          <td><%=l login.occurred_at, format: :long %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="col-md-10">
    <ul class="nav nav-tabs" id="participant-table">
      <li class="active">
        <a data-toggle="tab"><%=t 'conemo.views.active.participants.report.content_accessed' %></a>
      </li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="pending">
        <table class="table table-striped table-bordered">
          <tr>
            <th>Release Day</th>
            <th>Lesson</th>
            <th>Patient Response</th>
          </tr>
          <% @lessons.each do |lesson| %>
            <tr>
              <td><%= lesson.day_in_treatment %></td>
              <td><%= lesson.title %></td>
              <td><%= lesson.content_access_events.find_by(participant_id: @participant.id).answer rescue '' %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
