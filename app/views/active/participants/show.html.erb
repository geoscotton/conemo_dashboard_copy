<h1>
  <%= link_to "", active_report_path(@participant), class: "fa fa-chevron-left" %>
</h1>

<div class="profile">
  <div class="row">
    <div class="col-md-12" id="contact-info">
      <%= render 'contact_info', participant: @participant %>
    </div>

    <div class="col-md-12" id="smartphone-info">
      <% if @participant.smartphone %>
        <%= render 'smartphone', smartphone: @participant.smartphone %>
      <% else %>
        <h2><%= t "conemo.views.active.participants.show.smartphone_heading" %> <%= link_to '', new_participant_smartphone_path(@participant), class: "fa fa-edit" %></h2>
      <% end %>
    </div>
  </div>
</div>

<div class="page-header">
</div>

<ul class="timeline">
  <% @participant_contacts.map(&:contact).each do |contact| %>
    <%= render partial: contact.class.to_s.underscore, object: contact %>
  <% end %>
</ul>
