<h1><%= AdditionalContact.model_name.human.capitalize %></h1>

<div class="row well">
  <div class="col-md-10">
    <%= form_for @additional_contact,
                 url: participant_additional_contacts_path(@participant),
                 html: { role: "form", class: "form-horizontal" } do |f| %>
      <div class="form-group">
        <%= f.label :scheduled_at, class: "col-md-3 control-label" %>
        <div class="col-md-7">
          <%= f.datetime_select :scheduled_at, {}, { class: "date-select" } %>
          <br>
          <small><%= Time.zone %></small>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :kind, class: "col-md-3 control-label" %>
        <div class="col-md-7">
          <%= f.select :kind, options_for_select(t("activerecord.field_options.additional_contact.kinds")),
                       {},
                       { class: "dropdown", required: true } %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-3 col-md-7">
          <%= f.submit t("conemo.views.shared.save_button"), class: "btn btn-primary" %>
          <%= link_to t("conemo.views.shared.cancel_button"), participant_tasks_path(@participant), class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
