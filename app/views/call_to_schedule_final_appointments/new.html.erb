<h1><%= t "conemo.views.call_to_schedule_final_appointments.new.heading" %></h1>

<div class="row well">
  <div class="col-md-10">
    <%= form_for @call_to_schedule_final_appointment,
                 url: participant_call_to_schedule_final_appointment_path(@participant),
                 html: { role: "form", class: "form-horizontal" } do |f| %>
      <div class="form-group">
        <%= f.label :contact_at, class: "col-md-3 control-label" %>
        <div class="col-md-7">
          <%= f.datetime_select :contact_at, {}, { class: "date-select" } %>
          <br>
          <small><%= Time.zone %></small>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :final_appointment_at, class: "col-md-3 control-label" %>
        <div class="col-md-7">
          <%= f.datetime_select :final_appointment_at, {}, { class: "date-select" } %>
          <br>
          <small><%= Time.zone %></small>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :final_appointment_location, class: "col-md-3 control-label" %>
        <div class="col-md-7">
          <%= f.select :final_appointment_location, options_for_select(t("conemo.family_health_units")),
                       {},
                       { class: "dropdown", required: true } %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-3 col-md-7">
          <%= f.submit t("conemo.views.shared.save_button"), class: "btn btn-primary" %>
          <%= link_to t("conemo.views.shared.cancel_button"), active_participants_path, class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
