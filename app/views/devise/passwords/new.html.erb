<div class="row">
  <div class="col-md-6">
    <div class="col-sm-offset-3 col-sm-10">
      <h2><%= t('.forgot_your_password', :default => 'Forgot your password?') %></h2>
    </div>

    <%= form_for resource,
                 as: resource_name,
                 url: password_path(resource_name),
                 html: { class: "form-horizontal", role: "form", method: :post } do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email, class: "col-md-3 col-sm-3 control-label" %>
        <div class="col-sm-9 col-md-9">
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-10">
          <%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), class: "btn btn-primary" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-10">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
