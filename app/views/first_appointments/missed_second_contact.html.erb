<h1><%= t "conemo.views.patient_contacts.new.heading" %>
  for <%= participant.first_name %> <%= participant.last_name %></h1>

<div class="row well">
  <div class="col-md-10">
    <%= form_for @first_appointment, url: participant_first_appointment_path(participant), method: @first_appointment.valid? ? :patch : :post, html: {role: "form", class: "form-horizontal"} do |f| %>
        <div class="form-group">
          <%= f.label :next_contact, class: "col-md-3 control-label" %>
          <div class="col-md-6">
            <%= f.datetime_select :next_contact, class: "form-control" %>
            <br>
            <small><%= Time.zone %></small>
          </div>
        </div>
        <div class="form-group">
          <%= render 'shared/patient_contact_form', {patient_contact: @patient_contact, f: f, participant: participant} %>
          <div class="col-md-offset-3 col-md-6">
            <%= f.submit t("conemo.views.shared.save_button"), class: "btn btn-primary" %>
            <%= link_to t("conemo.views.shared.cancel_button"), active_participants_path, class: "btn btn-default" %>
          </div>
    <% end %>
    </div>
  </div>