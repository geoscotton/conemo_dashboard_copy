<%= form_for [participant, @first_contact], html: { role: "form", class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :contact_at, t("conemo.views.first_contacts.form.contact_at") + " *", class: "col-md-3 control-label" %>
    <div class="col-md-6">
      <%= f.date_select :contact_at, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :first_appointment_at, t("conemo.views.first_contacts.form.first_appointment_at") + " *", class: "col-md-3 control-label" %>
    <div class="col-md-6">
      <%= f.datetime_select :first_appointment_at, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :first_appointment_location, t("conemo.views.first_contacts.form.first_appointment_location") + " *", class: "col-md-3 control-label" %>
    <div class="col-md-6">
      <%= f.text_field :first_appointment_location, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-3 col-md-6">
      <%= f.submit t("conemo.views.shared.save_button"), class: "btn btn-primary" %>
      <%= link_to t("conemo.views.shared.cancel_button"), active_participants_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>