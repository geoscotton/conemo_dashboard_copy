<h1><%=t("conemo.views.shared.reschedule").capitalize%> <%= t("conemo.views.first_contacts.new.heading").downcase %></h1>

<div class="row well">
  <div class="col-md-10">
    <%= form_for @first_contact, url: participant_first_contact_path(participant), method: @first_contact.valid? ? :patch : :post, html: {role: "form", class: "form-horizontal"} do |f| %>
        <div class="form-group">
          <%= f.label :first_appointment_at, class: "col-md-3 control-label" %>
          <div class="col-md-7">
            <%= f.datetime_select :first_appointment_at, class: "form-control", required: true %>
            <br>
            <small><%= Time.zone %></small>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :first_appointment_location, class: "col-md-3 control-label" %>
          <div class="col-md-7">
            <%= f.text_field :first_appointment_location, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= render 'shared/patient_contact_form', {patient_contact: @patient_contact, f: f, participant: participant} %>
          <div class="col-md-offset-3 col-md-6">
            <%= f.submit t("conemo.views.shared.save_button"), class: "btn btn-primary" %>
            <%= link_to t("conemo.views.shared.cancel_button"), active_participants_path, class: "btn btn-default" %>
          </div>
    <% end %>
    </div>
  </div>