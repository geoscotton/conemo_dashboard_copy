<!DOCTYPE html>
<html>
<head>
  <title>ConemoDashboard</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <%= link_to "CONEMO", "/", class: "navbar-brand" %>
      </div>

      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "English", dashboard_path(locale: "en") %></li>
          <li><%= link_to "Español", dashboard_path(locale: "es-PE") %></li>
          <li><%= link_to "Português", dashboard_path(locale: "pt-BR") %></li>
          <% if user_signed_in? %>
            <li><%= link_to t("conemo.views.dashboards.index.sign_out"), destroy_user_session_path, method: :delete %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div> <!-- navbar -->

  <div class="container">
    <% if flash[:alert] || flash[:notice] %>
      <div class="alert alert-<%= flash[:alert] ? "warning" : "info" %> alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= flash[:alert] || flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>
