<tr class="draggable">
  <td><%= link_to lesson.title, lesson_path(lesson) %></td>
  <td><%= lesson.day_in_treatment %></td>
  <td><%= lesson.slides.count %></td>
  <td><%= link_to icon("pencil fa-lg"), edit_lesson_path(lesson), id: "edit-lesson-#{ lesson.id }" %></td>
  <td><%= link_to icon("trash-o fa-lg text-danger"),
                  lesson_path(lesson),
                  id: "destroy-lesson-#{ lesson.id }",
                  method: "delete",
                  :"data-confirm" => "Are you sure you want to delete #{ lesson.title }?"
      %></td>
</tr>
