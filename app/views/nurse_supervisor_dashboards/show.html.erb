<h3><%= Participant.model_name.human(count: 2) %></h3>

<div class="panel panel-default">
  <div class="panel-heading"><%= @pending_participants.count %> Unassigned</div>

  <div class="panel-body">
    <table class="table table-bordered table-condensed table-hover">
      <thead>
        <tr>
          <th><%= t "conemo.views.pending.participants.index.edit_info" %></th>
          <th><%= t "conemo.views.pending.participants.index.name" %></th>
          <th><%= t "conemo.views.pending.participants.index.study_identifier" %></th>
          <th><%= t "conemo.views.pending.participants.index.enrollment_date" %></th>
          <th>Date added to dashboard</th>
          <th><%= t "conemo.views.pending.participants.index.activate" %></th>
          <th><%= t "conemo.views.pending.participants.index.disqualify" %></th>
        </tr>
      </thead>

      <tbody>
        <% @pending_participants.each do |participant| %>
          <tr>
            <td>
              <%= link_to(edit_participant_path(participant), class: "btn btn-default", :"aria-label" => t("conemo.views.pending.participants.index.edit_info")) do %>
                <span class="fa fa-edit fa-2x" aria-hidden="true"></span>
                <span class="sr-only"><%= t "conemo.views.pending.participants.index.edit_info" %></span>
              <% end %>
            </td>
            <td><%= participant.last_and_first_name %></td>
            <td><%= participant.study_identifier %></td>
            <td><%= l participant.enrollment_date, format: :long %></td>
            <td><%= l participant.created_at.to_date, format: :long %></td>
            <td>
              <%= link_to(pending_activate_path(participant), class: "btn btn-default", :"aria-label" => t("conemo.views.pending.participants.index.activate")) do %>
                <span class="fa fa-thumbs-up fa-2x" aria-hidden="true"></span>
                <span class="sr-only"><%= t "conemo.views.pending.participants.index.activate" %></span>
              <% end %>
            </td>
            <td>
              <%= link_to(participant_path(id: participant.id, participant: { status: "ineligible" }), method: :put, class: "btn btn-default", :"aria-label" => t("conemo.views.pending.participants.index.disqualify")) do %>
                <span class="fa fa-thumbs-down fa-2x" aria-hidden="true"></span>
                <span class="sr-only"><%= t "conemo.views.pending.participants.index.disqualify" %></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading"><%= @completed_participants.count %> Completed</div>

  <div class="panel-body">
    <table class="table table-bordered table-condensed table-hover">
      <thead>
        <tr>
          <th><%= Nurse.model_name.human %></th>
          <th><%= t "conemo.views.pending.participants.index.name" %></th>
          <th><%= t "conemo.views.pending.participants.index.study_identifier" %></th>
          <th><%= t "conemo.views.pending.participants.index.enrollment_date" %></th>
          <th>Date added to dashboard</th>
        </tr>
      </thead>

      <tbody>
        <% @completed_participants.each do |participant| %>
          <tr>
            <td><%= participant.nurse.last_and_first_name %></td>
            <td><%= participant.last_and_first_name %></td>
            <td><%= participant.study_identifier %></td>
            <td><%= l participant.enrollment_date, format: :long %></td>
            <td><%= l participant.created_at.to_date, format: :long %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading"><%= @dropped_out_participants.count %> Dropped out</div>

  <div class="panel-body">
    <table class="table table-bordered table-condensed table-hover">
      <thead>
        <tr>
          <th><%= t "conemo.views.pending.participants.index.name" %></th>
          <th><%= t "conemo.views.pending.participants.index.study_identifier" %></th>
          <th>Date added to dashboard</th>
        </tr>
      </thead>

      <tbody>
        <% @dropped_out_participants.each do |participant| %>
          <tr>
            <td><%= participant.last_and_first_name %></td>
            <td><%= participant.study_identifier %></td>
            <td><%= l participant.created_at.to_date, format: :long %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<h3><%= Nurse.model_name.human(count: @nurses.count) %></h3>

<% @nurses.each do |nurse| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>
        <%= link_to nurse.last_and_first_name, nurse_tasks_summary_path(nurse) %>
        <% if nurse.supervision_sessions.latest %>
          <small class="pull-right <%= SupervisionSessionPresenter.new(nurse.supervision_sessions.latest).css_class %>">
            Last supervision session: <%= l nurse.supervision_sessions.latest.session_at, format: :long %>
            <%= link_to "Review", nurse_supervision_sessions_path(nurse) %>
          </small>
        <% end %>
      </h4>

      <ul class="list-inline">
        <li><%= nurse.active_participants.count %> <%= Participant.model_name.human(count: nurse.active_participants.count) %></li>
        <li><%= nurse.current_tasks.count %> <%= NurseTask.model_name.human(count: nurse.current_tasks.count) %></li>
        <li><%= nurse.overdue_tasks.count %> Overdue</li>
        <li><%= nurse.family_health_unit_name %></li>
      </ul>
    </div>

    <div class="panel-body">
      <div class="btn-group" role="group" aria-label="Actions">
        <%= link_to "Log supervision session",
                    new_nurse_supervision_session_path(nurse),
                    { class: "btn btn-link" } %>
        <%= link_to "Log supervision contact",
                    new_nurse_supervision_contact_path(nurse),
                    { class: "btn btn-link" } %>
      </div>
    </div>
  </div>
<% end %>
