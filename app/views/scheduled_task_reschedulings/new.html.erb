<h1><%= @scheduled_task_rescheduling.nurse_task.model_name.human %></h1>

<div class="row well">
  <div class="col-md-10">
    <%= form_for @scheduled_task_rescheduling,
                 url: participant_task_scheduled_task_reschedulings_path(participant_id: @participant, task_id: @scheduled_task_rescheduling.nurse_task_id),
                 html: { role: "form", class: "form-horizontal" } do |f| %>
      <div class="form-group">
        <%= f.label :scheduled_at, class: "col-md-3 control-label" %>
        <div class="col-md-7">
          <%= f.datetime_select :scheduled_at, { required: true, default: @scheduled_task_rescheduling.nurse_task.scheduled_at }, { class: "date-select" } %>
          <br>
          <small><%= Time.zone %></small>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :explanation, class: "col-md-3 control-label" %>
        <div class="col-md-7">
          <%= f.select :explanation, options_for_select(t("activerecord.field_options.scheduled_task_rescheduling.explanations")),
                       {},
                       { class: "dropdown", required: true } %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :notes, class: "col-md-3 control-label" %>
        <div class="col-md-7">
          <%= f.text_area :notes, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-3 col-md-7">
          <%= f.submit t("conemo.views.shared.save_button"), class: "btn btn-primary" %>
          <%= link_to t("conemo.views.shared.cancel_button"), participant_tasks_path(@participant), class: "btn btn-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
