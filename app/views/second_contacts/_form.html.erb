<%= form_for @second_contact, url: participant_second_contact_path(@participant), method: @second_contact.valid? ? :patch : :post, html: {role: "form", class: "form-horizontal"} do |f| %>
    <div class="form-group">
      <%= f.label :contact_at, class: "col-md-4 control-label" %>
      <div class="col-md-7">
        <%= f.datetime_select :contact_at, {required: true, default: @participant.second_contact ? second_contact.contact_at : @participant.first_appointment.next_contact}, {class: "date-select"}  %>
        <br>
        <small><%= Time.zone %></small>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :next_contact, class: "col-md-4 control-label" %>
      <div class="col-md-7">
        <%= f.datetime_select :next_contact, {default: @participant.second_contact ? second_contact.next_contact : @participant.first_appointment.next_contact + 3.weeks, required: true}, {class: "date-select"} %>
        <br>
        <small><%= Time.zone %></small>
      </div>
    </div>
    <div class="form-group">
      <h3><%= t "conemo.views.second_contacts.patient_question_header"%></h3>
    </div>
    <div class="form-group">
      <%= f.label :q1, class: "col-md-4 control-label" %>
      <div class="col-md-7">
        <%= f.text_area :q1, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :q2, class: "col-md-4 control-label" %>
      <div class="col-md-7">
        <label class="radio-inline">
          <%= f.radio_button :q2, 'true' %> <%= t("conemo.views.shared.true") %>
        </label>
        <label class="radio-inline">
          <%= f.radio_button :q2, 'false' %> <%= t("conemo.views.shared.false") %>
        </label>
      </div>
    </div>
    <div class="form-group">
