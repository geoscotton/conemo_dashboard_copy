<%= f.fields_for :patient_contacts, patient_contact do |builder| %>
    <div class="form-group">
      <%= builder.label :contact_at, class: "col-md-3 control-label" %>
      <div class="col-md-7">
        <%= builder.datetime_select :contact_at, class: "form-control", required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= builder.label :contact_reason, class: "col-md-3 control-label" %>
      <div class="col-md-7">
        <%= builder.select :contact_reason, options_for_select([
                                                                       "#{t 'conemo.views.patient_contacts.options.programmed_follow_up_call'}",
                                                                       "#{t 'conemo.views.patient_contacts.options.non_adherence'}",
                                                                       "#{t 'conemo.views.patient_contacts.options.patient_requested_call'}",
                                                                       "#{t 'conemo.views.patient_contacts.options.other'}"
                                                               ], "#{t 'conemo.views.patient_contacts.options.other'}"),
                           {}, {class: "form-control"} %>
      </div>
    </div>
    <div class="form-group">
      <%= builder.label :note, class: "col-md-3 control-label" %>
      <div class="col-md-7">
        <%= builder.text_area :note, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-3 col-md-7">
        <%= builder.hidden_field :participant_id, value: participant.id %>
      </div>
<% end %>