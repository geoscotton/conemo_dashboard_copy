<%= form_for [@lesson, @slide], html: {class: "form-horizontal", role: "form"} do |f| %>
    <div class="form-group">
      <%= f.label :title, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control", required: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :body, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :body, class: "form-control", required: true, :"data-lang-code" => I18n.locale %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit t("conemo.views.shared.save_button"), class: "btn btn-primary" %>
        <%= link_to t("conemo.views.shared.cancel_button"), lesson_path(@lesson), class: "btn btn-default" %>
      </div>
    </div>
<% end %>
