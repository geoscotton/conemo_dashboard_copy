<h1><%= @task.model_name.human %></h1>

<div class="row well">
  <div class="col-md-10">
    <%= form_for [@participant, @task], url: participant_task_path(participant_id: @participant.id, id: @task.id), html: { role: "form", class: "form-horizontal" } do |f| %>
      <div class="form-group">
        <%= f.label :scheduled_at, class: "col-md-3 control-label" %>
        <div class="col-md-7">
          <%= datetime_select :task, :scheduled_at, { required: true }, { class: "date-select" } %>
          <br>
          <small><%= Time.zone %></small>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-3 col-md-7">
          <%= f.submit t("conemo.views.shared.save_button"), class: "btn btn-primary" %>
          <%= link_to t("conemo.views.shared.cancel_button"), participant_tasks_path(@participant), class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
