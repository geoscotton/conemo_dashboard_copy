<%= form_for @third_contact, url: participant_third_contact_path(participant), method: @third_contact.valid? ? :patch : :post, html: {role: "form", class: "form-horizontal"} do |f| %>
    <div class="form-group">
      <%= f.label :contact_at, class: "col-md-4 control-label" %>
      <div class="col-md-7">
        <%= f.datetime_select :contact_at, {required: true, default: participant.third_contact ? third_contact.contact_at : (participant.second_contact.next_contact)}, {class: "date-select"} %>
        <br>
        <small><%= Time.zone %></small>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :session_length, class: "col-md-4 control-label" %>
      <div class="col-md-7">
        <%= f.number_field :session_length, min: 1, class: "form-control", required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :final_appointment_at, class: "col-md-4 control-label" %>
      <div class="col-md-7">
        <%= f.datetime_select :final_appointment_at, {default: participant.third_contact ? third_contact.final_appointment_at : DateTime.current + 2.weeks, required: true}, {class: "date-select"} %>
        <br>
        <small><%= Time.zone %></small>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :final_appointment_location, class: "col-md-4 control-label" %>
      <div class="col-md-7">
        <%= f.text_field :final_appointment_location, class: "form-control", required: true %>
      </div>
    </div>
    <div class="form-group">
      <h3><%= t "conemo.views.second_contacts.patient_question_header"%></h3>
    </div>
    <div class="form-group">
      <%= f.label :q1, class: "col-md-4 control-label" %>
      <div class="col-md-7">
        <%= f.text_area :q1, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :q2, class: "col-md-4 control-label" %>
      <div class="col-md-7">
        <label class="radio-inline">
          <%= f.radio_button :q2, 'true' %> <%= t("conemo.views.shared.true") %>
        </label>
        <label class="radio-inline">
          <%= f.radio_button :q2, 'false' %> <%= t("conemo.views.shared.false") %>
        </label>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :q2_notes, class: "col-md-4 control-label" %>
      <div class="col-md-7">
        <%= f.text_area :q2_notes, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :q3, class: "col-md-4 control-label" %>
      <div class="col-md-7">
        <label class="radio-inline">
          <%= f.radio_button :q3, 'true' %> <%= t("conemo.views.shared.true") %>
        </label>
        <label class="radio-inline">
          <%= f.radio_button :q3, 'false' %> <%= t("conemo.views.shared.false") %>
        </label>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :q3_notes, class: "col-md-4 control-label" %>
      <div class="col-md-7">
        <%= f.text_area :q3_notes, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :q4, class: "col-md-4 control-label" %>
      <div class="col-md-7">
        <label class="radio-inline">
          <%= f.radio_button :q4, 'true' %> <%= t("conemo.views.shared.true") %>
        </label>
        <label class="radio-inline">
          <%= f.radio_button :q4, 'false' %> <%= t("conemo.views.shared.false") %>
        </label>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :q4_notes, class: "col-md-4 control-label" %>
      <div class="col-md-7">
        <%= f.text_area :q4_notes, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :q5, class: "col-md-4 control-label" %>
      <div class="col-md-7">
        <label class="radio-inline">
          <%= f.radio_button :q5, 'true' %> <%= t("conemo.views.shared.true") %>
        </label>
        <label class="radio-inline">
          <%= f.radio_button :q5, 'false' %> <%= t("conemo.views.shared.false") %>
        </label>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :q5_notes, class: "col-md-4 control-label" %>
      <div class="col-md-7">
        <%= f.text_area :q5_notes, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <h3><%= t "conemo.views.second_contacts.nurse_question_header"%></h3>
    </div>
    <%= render 'nurse_participant_evaluations/third_contact_form', {nurse_participant_evaluation: @nurse_participant_evaluation, f: f} %>
    <div class="form-group">
      <%= f.label :notes, class: "col-md-4 control-label" %>
      <div class="col-md-7">
        <%= f.text_area :notes, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-4 col-md-7">
        <%= f.submit t("conemo.views.shared.save_button"), class: "btn btn-primary" %>
        <%= link_to t("conemo.views.shared.cancel_button"), active_participants_path, class: "btn btn-default" %>
      </div>
    </div>
<% end %>